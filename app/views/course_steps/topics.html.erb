<div class="container", style="margin-top: 30px">
  <h1>Phase 1: Course Phase</h1>
  <ul class="pagination">
    <li class="page-item"><%= link_to 'Back', course_check_path(:id => @course.id),
                                      :data => {:confirm => 'Please make sure to insert course name, otherwise, course will not be saved.'},
                                      class: "page-link" %>
    </li>
    <li class="page-item"><%= link_to 'Step 1', wizard_path(:about_course, :course_id => @course.id), :method => :get, class: "page-link" %></li>
    <li class="page-item active"><%= link_to 'Step 2', wizard_path(:topics, :course_id => @course.id), :method => :get, class: "page-link" %></li>
    <li class="page-item"><%= link_to 'Step 3', wizard_path(:instructors, :course_id => @course.id), :method => :get, class: "page-link" %></li>
    <li class="page-item"><%= link_to 'Step 4', wizard_path(:course_meta, :course_id => @course.id), :method => :get, class: "page-link" %></li>
    <li class="page-item"><%= link_to 'Step 5', wizard_path(:objectives, :course_id => @course.id), :method => :get, class: "page-link" %></li>
    <li class="page-item"><%= link_to 'Step 6', wizard_path(:targets, :course_id => @course.id), :method => :get, class: "page-link" %></li>
    <li class="page-item"><%= link_to 'Step 7', wizard_path(:outcomes, :course_id => @course.id), :method => :get, class: "page-link" %></li>
    <li class="page-item"><%= link_to 'Step 8', wizard_path(:problems_solutions, :course_id => @course.id), :method => :get, class: "page-link" %></li>
    <li class="page-item"><%= link_to 'Step 9', wizard_path(:chapters, :course_id => @course.id), :method => :get, class: "page-link" %></li>
    <li class="page-item"><%= link_to 'Step 10', wizard_path(:evaluation, :course_id => @course.id), :method => :get, class: "page-link" %></li>
    <li class="page-item"><%= link_to 'Next Step', next_wizard_path(:course_id => @course.id), class: "page-link" %></li>
  </ul>
</div>
<div class="container">
  <div class="card">
  <%= form_for @course, url: wizard_path do |f| %>
    <h3 class="card-header">What students will learn</h3>
      <div class="card-body">

        <div class="topics">
          <%= f.fields_for :topics do |topic| %>
            <%= render 'topic_fields', f: topic, class: "form-control" %>
          <% end %>
        </div>

        <div class="link">
          <%= link_to_add_association 'Add topic', f, :topics, class:"btn btn-primary" %>
        </div>

        <div class="form-group">
          <%= f.hidden_field :course_id, value: @course.id %>
        </div>

        <div class="form-group">
          <%= f.submit "Save and continue",class:"btn btn-success" %>
          <%= button_to 'Skip', wizard_path(:instructors),class:"btn btn-warning" %>
        </div>
      <% end %>
    </div>
  </div>
</div>