<div class="nested-fields">
  <div class="field offset-lg-4" , style="margin-bottom: 10px">
    <%= f.label :sub_topic ,class: "text-secondary"%>
    <div class="row" ,style="margin-bottom: 10px">
      <div class="col-sm-10"><%= f.text_field :name, label: false, class: "form-control", placeholder: "Enter subtopic" %></div>
      <div class="col-sm-2"><%= link_to_remove_association '<i class="fa fa-trash-o fa-2x text-danger"></i>'.html_safe, f%></div>

    </div>
    <%= f.label :"Materials/techniques used for teaching" %>
    <div style="margin-bottom: 10px">
      <%= f.collection_check_boxes :material_ids, Material.all, :id, :name do |m| %>
        <div class="collection-check-box">
          <%= m.check_box %>
          <%= m.label %>
        </div>
      <% end %>
    </div>

  </div>
</div>