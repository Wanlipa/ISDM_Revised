<div class="nested-fields">
  <div class="field", style="margin-bottom: 10px">
      <div class="row">
        <div class="col-md-5">
          <%= f.text_field :learning, label: false, class: "form-control", placeholder: "Enter Learning Outcome / ระบุการเรียนรู้"%></div>
        <div class="col-md-5">
          <%= f.select :outcome, [['Remember', 'Remember'],
                              ['Understand', 'Understand'],
                              ['Apply', 'Apply'],
                              ['Analyze', 'Analyze'],
                              ['Evaluate', 'Evaluate'],
                              ['Create', 'Create']], {prompt: "Select Bloom's Taxonomy / เลือกประเภท"}, {class: "form-control"} %>
        </div>
        <div class="col-md-2"><%= link_to_remove_association '<i class="fa fa-trash-o fa-2x text-danger"></i>'.html_safe, f %></div>

    <hr style="height: 12px; border: 0; box-shadow: inset 0 12px 12px -12px rgba(0, 0, 0, 0.5);">
  </div>
</div>
</div>