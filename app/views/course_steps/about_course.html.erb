<div class="container">
  <div class="card">
  <h3 class="card-header">About this course</h3>
    <div class="card-body">

      <%= form_for @course, url: wizard_path do |f| %>
        <div class="form-group">
          <%= f.label :course_name%><br>
          <%= f.text_field :courseName, size: "30", class: "form-control", placeholder: "Enter course name"%>
        </div>

        <div class="form-group">
          <%= f.label :category_id %>
          <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Select a category"}, {class: "form-control"}%>
        </div>

        <div class="form-group">
          <%= f.label :about_course %><br>
          <%= f.text_area :about_course, size: "30x5", class: "form-control", placeholder: "Enter course description"%>
        </div>

        <%= f.label :topic %><br>

        <div class="card">
          <div class="card-body">
            <div class="topics">

              <% i = 0 %>
              <%= f.fields_for :topics do |topic| %>
                <% i += 1 %>
                <div class="row">
                  <div class="col-md-1"><%=i %></div>
                  <div class="col-md-11"><%= render 'topic_fields', f: topic, class: "form-control" %></div>
                </div>


              <% end %>
            </div>

            <div class="link">
              <%= link_to_add_association '<i class="fa fa-plus-circle fa-2x"></i>'.html_safe, f, :topics %>
            </div>
          </div>
        </div>


        <div class="form-group">
          <%= f.hidden_field :course_id, value: @course.id %>
        </div>

        <div class="form-group">
          <%= f.submit "Save and continue" ,class:"btn btn-success" %>
          <%= button_to 'Skip', wizard_path(:topics),class:"btn btn-warning" %>
        </div>
      <% end %>
    </div>
  </div>
</div>