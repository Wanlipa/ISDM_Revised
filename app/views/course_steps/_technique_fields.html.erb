<div class="nested-fields">
  <div class="field" , style="margin-bottom: 10px">
    <%= f.label :technique %>
    <div style="margin-bottom: 10px">
      <%= f.select :name, [['Remember', 'Remember'],
                                        ['Understand', 'Understand'],
                                        ['Apply', 'Apply'],
                                        ['Analyze', 'Analyze'],
                                        ['Evaluate', 'Evaluate'],
                                        ['Create', 'Create']], {prompt: "Select technique"}, {class: "form-control"} %>
    </div>
    <%= link_to_remove_association "Remove technique", f, class: "btn btn-danger" %>
  </div>
</div>