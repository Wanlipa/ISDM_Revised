    <li class="page-item"><%= link_to 'Step 9', wizard_path(:verify, :course_id => @course.id), :method => :get, class: "page-link" , 'data-toggle': 'tooltip', 'data-placement':'top', title: 'Verify Outcome'%></li>
    <li class="page-item"><%= link_to 'Next Step', next_wizard_path(:course_id => @course.id), class: "page-link" %></li>
  </ul>
</div>
<div class="container">
  <div class="card">

      <div class="card-header" id="headingOne">
        <h3 class="faq-links">Course metadata <i class="fa fa-angle-up" class="btn btn-link " data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne"></i></h3>
        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
          <div class="card-body">
            more detail...
          </div>
        </div>
      </div>

      <div class="card-body">
        <%= form_for @course, url: wizard_path do |f| %>
        <div class="form-group">
          <%= f.label "length (minutes)" %><br>
          <%= f.number_field :length, min: 1, max: 1000, step: 1 %>
        </div>

        <div class="form-group">
          <%= f.label :effort %><br>
          <%= f.select :effort, [['1 to 2 hours per week','1 to 2 hours per week'],
                                 ['3 to 4 hours per week','3 to 4 hours per week'],
                                 ['5 to 6 hours per week','5 to 6 hours per week'],
                                 ['7 to 8 hours per week','7 to 8 hours per week'],
                                 ['9 to 10 hours per week','9 to 10 hours per week'],
                                 ['11 to 12 hours per week','11 to 12 hours per week'],
                                 ['13 to 14 hours per week','13 to 14 hours per week'],
                                 ['15 to 16 hours per week','15 to 16 hours per week'],
                                 ['17 to 18 hours per week','17 to 18 hours per week'],
                                 ['19 to 20 hours per week','19 to 20 hours per week'],
                                 ['21 to 22 hours per week','21 to 22 hours per week'],
                                 ['23 to 24 hours per week','23 to 24 hours per week'],
                                 ['25 to 26 hours per week','25 to 26 hours per week']], {prompt: "Select effort"}, {class: "form-control"} %>
        </div>

        <div class="form-group">
          <%= f.label :price %>&nbsp<span style="color: #999999;">(ex. FREE, Add a Verified Certificate for $49 USD)</span><br>
          <%= f.text_field :price, class: "form-control", placeholder: "Enter price" %>
        </div>

        <div class="form-group">
          <%= f.label :institution %>&nbsp<span style="color: #999999;">(ex. Microsoft, UC San DiegoX, UC BerkeleyX)</span><br>
          <%= f.text_field :institution, class: "form-control", placeholder: "Enter institution" %>
        </div>

        <div class="form-group">
          <%= f.label :level %><br>
          <%= f.select :level, [['Introductory','Introductory'],
                                  ['Intermediate','Intermediate'],
                                  ['Advanced','Advanced']], {prompt: "Select level"}, {class: "form-control"} %>
        </div>

        <div class="form-group">
          <%= f.label :languages %><br>
          <%= f.select :languages, [['Chinese','Chinese'],
                                    ['English','English'],
                                    ['Japanese','Japanese'],
                                    ['Thai','Thai'],], {prompt: "Select language"}, {class: "form-control"} %>
        </div>

        <div class="form-group">
          <%= f.label :video_transcript %><br>
          <%= f.select :videots, [['Chinese','Chinese'],
                                    ['English','English'],
                                    ['Japanese','Japanese'],
                                    ['Thai','Thai'],], {prompt: "Select video transcript"}, {class: "form-control"} %>
        </div>

        <div class="form-group">
          <%= f.label :prerequisites %>&nbsp<span style="color: #999999;">(ex. None, Familiarity with marketing and basic operations in Microsoft Excel preferred.)</span><br>
          <%= f.text_area :prerequisites, class: "form-control", placeholder: "Enter prerequisites" %>
        </div>

        <%= f.label :target_learner %>
        <div class="card">
          <div class="card-body">
            <div class="targets">
              <% i = 0 %>
              <%= f.fields_for :targets do |target| %>
                <% i += 1 %>
                <div class="row">
                  <div class="col-md-1"><%=i %></div>
                  <div class="col-md-11"><%= render 'target_fields', f: target, class: "form-control" %></div>
                </div>
<!--                <hr style="height: 12px; border: 0; box-shadow: inset 0 12px 12px -12px rgba(0, 0, 0, 0.5);">-->
              <% end %>
            </div>
            <div class="link">
              <%= link_to_add_association '<i class="fa fa-plus-circle fa-2x"></i>'.html_safe, f, :targets %>
            </div>
          </div>
        </div>


        <div class="form-group">
          <%= f.hidden_field :course_id, value: @course.id %>
        </div>

        <div class="form-group">
          <%= f.submit "Save and continue" ,class:"btn btn-success" %>
          <%= button_to 'Skip', wizard_path(:topics),class:"btn btn-warning" %>
        </div>

      </div>
    </div>
<% end %>
</div>