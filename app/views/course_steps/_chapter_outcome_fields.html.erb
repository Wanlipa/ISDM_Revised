<div class="nested-fields">
  <div class="field offset-lg-2" , style="margin-bottom: 10px">
    <%= f.label :chapter_outcome %>
    <div style="margin-bottom: 10px">
      <%= f.select :choutcome, [['Remember', 'Remember'],
                              ['Understand', 'Understand'],
                              ['Apply', 'Apply'],
                              ['Analyze', 'Analyze'],
                              ['Evaluate', 'Evaluate'],
                              ['Create', 'Create']], {prompt: "Select learning outcome"}, {class: "form-control"} %>
    </div>
    <%= link_to_remove_association "Remove chapter outcome", f, class: "btn btn-danger" %>
  </div>
</div>
