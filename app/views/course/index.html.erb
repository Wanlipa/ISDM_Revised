
<div class="container" style="margin-top: 30px">
  <div class="row">

    <%= link_to 'New courses', user_course_steps_path(current_user.id), method: :post, class: "btn btn-outline-success"%>
  </div>


  <table class="table table-hover">

    <th>Course Name</th>
    <th colspan="3">Action</th>


    <% @courses.each do |course| %>
      <tr>
        <td><%= course.courseName %></td>
        <td><%= link_to 'Edit', user_course_steps_path(current_user.id, :course_id => course.id) ,class: "btn btn-info btn-sm"%></td>
        <td><%= link_to 'Show', user_course_path(current_user.id, :id => course.id) ,class: "btn btn-warning btn-sm"%></td>
        <td><%= link_to 'Destroy', [course.user, course],
                        method: :delete,
                        data: { confirm: 'Are you sure?' } ,class: "btn btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </table>
</div>
<%= link_to 'Back', welcome_index_path, class: "btn btn-outline-primary", style: "margin-left: 10px;" %>