<div class="container" style="margin-top: 30px">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1>Course Information</h1>
    </div>
    <div class="panel-body">
    <p>
      <strong>Course name:</strong>
      <%= @course.courseName %>
    </p>

      <p>
        <strong>Category:</strong>
        <%= @course.category.name %>
      </p>

    <p>
      <strong>About course:</strong>
      <%= @course.about_course %>
    </p>

    <p>
      <strong>Topics:</strong>
      <ul>
        <% @course.topics.each do |topic| %>
          <li><%= topic.name %></li>
        <% end %>
      </ul>
    </p>

    <p>
      <strong>Instructors:</strong><br>
      <% @course.instructors.each do |instructor| %>
        <%= image_tag(instructor.avatar.url, size: "200x200", :style => "border-radius: 50%") if instructor.avatar.present? %>
        <%= instructor.name %>
      <% end %>
      <br>
    </p>

    <p>
      <strong>Length:</strong>
      <%= @course.length %>
    </p>

    <p>
      <strong>Effort:</strong>
      <%= @course.effort %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @course.price %>
    </p>

    <p>
      <strong>Institution:</strong>
      <%= @course.institution %>
    </p>

    <p>
      <strong>Subject:</strong>
      <%= @course.subject %>
    </p>

    <p>
      <strong>Level:</strong>
      <%= @course.level %>
    </p>

    <p>
      <strong>Languages:</strong>
      <%= @course.languages %>
    </p>

    <p>
      <strong>Video Transcripts:</strong>
      <%= @course.videots %>
    </p>

    <p>
      <strong>Prerequisites:</strong>
      <%= @course.prerequisites %>
    </p>
    </div>
  </div>
  <div class="btn-group" role="group" aria-label="Basic example">
    <%= link_to 'Edit', user_course_steps_path(:course_id => @course.id) ,class: "btn btn-info"%>
    <%= link_to 'Export as PDF', course_course_syllabus_path(:course_id => @course.id), :target => '_blank' ,class: "btn btn-info"%>
    <%= link_to 'Back', course_index_path ,class: "btn btn-info"%>
  </div>

</div>


