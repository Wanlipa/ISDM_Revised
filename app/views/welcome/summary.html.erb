<div class="container">
  <h1 style="color: darkslateblue; margin-top: 10px;">Summary Report</h1>
  <canvas id="myPieChart"></canvas>


</div>

<script>

    var ctx2 = document.getElementById("myPieChart").getContext('2d');
    // And for a doughnut chart
    var myPieChart = new Chart(ctx2, {
        type: 'pie',
        data: {
            labels: [<% @users.each do |user| %>  "<%= user.email %>", <% end %>],
            datasets: [{
                data: [<% @users.each do |user| %>  <%= Course.where(:user_id => user.id).count %>, <% end %>],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1

            }]
        },
        options: {}
    });

</script>
